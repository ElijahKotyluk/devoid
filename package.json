{
  "name": "devoid",
  "version": "0.1.0",
  "description": "A modern dead-code analysis and usage graph engine for JavaScript/TypeScript.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "commonjs",
  "bin": {
    "devoid": "bin/devoid.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "dev": "tsx src/cli/index.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md,yml,yaml}\"",
    "test": "tsx --test",
    "test:cli": "pnpm build && tsx --test tests/cli/cli*.test.ts",
    "verify-tarball": "node scripts/verify-tarball.js",
    "dryrun": "pnpm clean && pnpm build && pnpm pack --pack-destination packed && pnpm verify-tarball"
  },
  "keywords": [
    "dead code",
    "javascript",
    "typescript",
    "static analysis",
    "cli"
  ],
  "dependencies": {
    "typescript": "^5.9.3"
  },
  "author": "Elijah Kotyluk <elijah@elijahkotyluk.com>",
  "license": "MIT",
  "packageManager": "pnpm@10.22.0",
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.3",
    "prettier-plugin-organize-imports": "^4.3.0",
    "tsx": "^4.21.0"
  },
  "engines": {
    "node": ">=18"
  }
}
